#!/bin/bash

# This script file resets the local OpenBazaar instance so that tests can be re-run.

docker-compose down
sudo rm -rf test/obdata/*
docker run --rm -v $(pwd)/test/obdata:/var/lib/openbazaar openbazaar/server:v0.11.1 init -d /var/lib/openbazaar
sudo cp test/setup/config test/obdata/
docker-compose up -d

